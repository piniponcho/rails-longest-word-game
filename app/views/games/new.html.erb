<h1>New Game</h1>
<% @array = [] %>
<% @letters.sample(5).each do |letter| %>
<%= letter %>
<% @array << letter %>
<% end %>

<h4>Whats the longest word you can find</h4>

<form action="/score" data-turbo="false" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @array %>
  <input type="text" name="word">
  <input type="submit" value="Enter a word">
</form>
